# Read the fasta file
fasta_file <- readDNAStringSet("~/miR-2954/mir_2954_target_prediction/GRCG7b_3UTR_BioMart.txt", format = "fasta")

# Remove sequences with "SNCNAVAAB"
fasta_file <- fasta_file[!grepl("SNCNAVAAB", fasta_file)]
