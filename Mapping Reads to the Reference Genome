--genomeDir ~/miR-2954/datasets/RNA-seq/STAR_index \
--sjdbGTFfile ~/miR-2954/datasets/RNA-seq/Gallus_gallus.bGalGal1.mat.broiler.GRCg7b.107.gtf \
